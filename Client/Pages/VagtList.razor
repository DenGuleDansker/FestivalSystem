@page "/vagtliste"
@using Common.Model
@using Client.Services
@using System.Net.Http.Json;
@using Client.Pages;


<PageTitle>Vagt listen</PageTitle>

<h1>Vagt listen</h1>

<input type="text" @bind="@searchKeyword" placeholder="Search by name" />

<div class="row">
    <div class="col-md-8">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Navn</th>
                    <th>Point</th>
                    <th>Telefonnummer</th>
                    <th>Addresse</th>
                    <th>Email</th>
                    <th>Fødselsdagsdato</th>
                    <th>koordinator: </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vagt in filteredVagtList)
                {
                    <tr>
                        <td>@vagt.Navn</td>
                        <td>@vagt.Point</td>
                        <td>@vagt.Start</td>
                        <td>@vagt.Slut</td>
                        <td>@vagt.Beskrivelse</td>
                        <td>@vagt.Kategori</td>
                        <td>@vagt.Antal</td>
                        <td>
                            <a href="@($"/redigervagt?id={vagt.ID}")"> <button class="btn btn-primary">Rediger vagt</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@code {
    private Vagt vagt = new Vagt(); // Opretter et tomt Booking objekt
    private Vagt[]? vagtlist = new Vagt[0]; // Opretter en tom liste af booking objekter
    private string searchKeyword = "";


    [Inject]
    private IVagtService mService { get; set; }


    protected override async Task OnInitializedAsync()
    {
        vagtlist = (await mService.getAll()).ToArray();

    }

    private IEnumerable<Vagt> filteredVagtList => string.IsNullOrWhiteSpace(searchKeyword) ? vagtlist : vagtlist.Where(v => v.Navn.Contains(searchKeyword, StringComparison.OrdinalIgnoreCase));



}